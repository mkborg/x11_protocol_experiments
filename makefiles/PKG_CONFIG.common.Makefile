PKG_CONFIG_CFLAGS += $(shell pkg-config --cflags $(PKG_CONFIG_COMPONENTS))
PKG_CONFIG_LIBS += $(shell pkg-config --libs $(PKG_CONFIG_COMPONENTS))
$(info "PKG_CONFIG_CFLAGS='$(PKG_CONFIG_CFLAGS)'")
$(info "PKG_CONFIG_LIBS='$(PKG_CONFIG_LIBS)'")
CFLAGS += $(PKG_CONFIG_CFLAGS)
#LIBS += $(PKG_CONFIG_LIBS)
LDFLAGS += $(PKG_CONFIG_LIBS)
